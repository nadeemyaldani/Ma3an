@using TGH.Helpers;
@model IEnumerable<TGH.Models.ApplicationUser>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Users</h1>

@*<p>
    <a asp-action="Create">Create New</a>
</p>*@
<table  class="table">
    <thead class="admin-table-header">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Email)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City.NameAR)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City.NameEN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Description)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @UIHelper.GetUserTypeName(item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City.NameAR)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City.NameEN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @if (item.Image != null && item.Image != "")
                    {
                        <div class="user-img"><img id="pictureThumbnail" width="50" height="50" src="data:image/jpeg;base64,@item.Image" alt="" /></div>
                    }
                    else
                    {
                        <div class="user-img"><img id="pictureThumbnail" width="50" height="50" src="~/maan/assets/images/author/author-02.jpeg" alt="" /></div>
                    }
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    @*| <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
                </td>
            </tr>
        }
    </tbody>
</table>
