<!-- Register & Login Start -->
<div class="section section-padding">
    <div class="container">
        <!-- Register & Login Wrapper Start -->
        <div class="register-login-wrapper">
            <div class="row align-items-center">
                <div class="col-lg-12">
                    <!-- Register & Login Images Start -->
                    <div class="register-login-images">
                        <div class="register-login-form">
                            <h3 class="title">@language.Getkey("LOGIN_FORM")</h3>
                            <div class="form-wrapper">
                                <form id="account" method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <!-- Single Form Start -->
                                    <div class="single-form">
                                        <input asp-for="UserName" placeholder="@language.Getkey("FORM_PHONE")" class="form-control" />
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>
                                    <!-- Single Form End -->
                                    <!-- Single Form Start -->
                                    <div class="single-form">
                                        <input asp-for="Password" class="form-control" placeholder="@language.Getkey("FORM_PASSWORD")" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <!-- Single Form End -->
                                    <!-- Single Form Start -->
                                    <div class="single-form">
                                        <button type="submit" class="btn btn-primary btn-hover-dark w-100">@language.Getkey("FORM_SIGNIN")</button>
                                        <a href="/user/register" class="btn btn-secondary btn-outline w-100">@language.Getkey("NAV_REGISTER")</a>
                                        <a href="/user/forgotpassword" style="color: #2DCDCB">@language.Getkey("BTN_FORGOT")</a>
                                    </div>
                                    <!-- Single Form End -->
                                </form>
                                <br><br>
                            </div>
                        </div>
                    </div>
                    <!-- Register & Login Images End -->
                </div>
            </div>
        </div>
        <!-- Register & Login Wrapper End -->
    </div>
</div>
<!-- Register & Login End -->

