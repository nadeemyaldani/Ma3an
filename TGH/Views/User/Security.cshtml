@using TGH.Models
@model SecurityUpdateModel
@{

}

<div class="section page-banner">
    <!-- <img class="shape-1 animation-round" src="~/maan/assets/images/shape/shape-8.png" alt="Shape"> -->
    <img class="shape-2" src="~/maan/assets/images/shape/@CultureInfo.CurrentUICulture.Name-shape-23.png" alt="Shape">
    <div class="container">
        <!-- Page Banner Start -->
        <div class="page-banner-content">
            <ul class="breadcrumb">
                <li><a href="/home">@language.Getkey("NAV_HOME")</a></li>
                <li class="active">@language.Getkey("NAV_MYPROFILE")</li>
            </ul>
            <h2 class="title">@language.Getkey("NAV_PASSWORD")</h2>
        </div>
        <!-- Page Banner End -->
    </div>

    <!-- Shape Icon Box Start -->
    <div class="shape-icon-box">

        <div class="box-content">
            <div class="box-wrapper">
                <img src="~/maan/assets/images/login.svg" alt="Shape" width="50">
                <!-- <i class="flaticon-login"></i> -->
            </div>
        </div>
        <img class="icon-shape-2" src="~/maan/assets/images/shape/shape-6.png" alt="Shape">
    </div>
    <!-- Shape Icon Box End -->
    <!-- <img class="shape-3" src="~/maan/assets/images/shape/shape-24.png" alt="Shape"> -->

    <img class="shape-author" src="~/maan/assets/images/author/@CultureInfo.CurrentUICulture.Name-author-11.jpg" alt="Shape">
</div>
<div class="section section-padding">
    <div class="container">
        <!-- Register & Login Wrapper Start -->
        <div class="register-login-wrapper">
            <div class="row align-items-center">
                <div class="col-lg-12">
                    <!-- Register & Login Images Start -->
                    <div class="register-login-images">
                        <div class="register-login-form">
                            <h3 class="title">@language.Getkey("NAV_PASSWORD")</h3>
                            <div class="form-wrapper">
                                <form asp-action="security" method="post" enctype="multipart/form-data">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="single-form">
                                        <input asp-for="MobileNumber" placeholder="@language.Getkey("FORM_PHONE")" disabled>
                                        <input asp-for="MobileNumber" type="hidden" />
                                        <span asp-validation-for="MobileNumber" class="text-danger"></span>
                                    </div>
                                    <div class="single-form">
                                        <input asp-for="OldPassword" placeholder="@language.Getkey("FORM_OLDPASSWORD")" />
                                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                                    </div>
                                    <div class="single-form">
                                        <input asp-for="NewPassword" placeholder="@language.Getkey("FORM_NEWPASSWORD")" />
                                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                                    </div>
                                    <div class="single-form">
                                        <input asp-for="ConfirmPassword" placeholder="@language.Getkey("FORM_NEWPASSWORDCONFIRM")" />
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>
                                    <!-- Single Form End -->
                                    <br>
                                    <!-- Single Form Start -->
                                    <div class="message-btn">
                                        <button type="submit" class="btn btn-primary btn-hover-dark w-40" style="margin: 0px 8px;">@language.Getkey("FORM_SAVE")</button>
                                        <a href="/home" class="btn btn-secondary btn-hover-primary" style="margin: 0px 8px;">@language.Getkey("FORM_CANCEL")</a>
                                    </div>
                                    <!-- Single Form End -->
                                </form>
                                <br><br>
                            </div>
                        </div>
                    </div>
                    <!-- Register & Login Images End -->
                </div>
            </div>
        </div>
        <!-- Register & Login Wrapper End -->
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}